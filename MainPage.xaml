<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:telerikDataGrid="clr-namespace:Telerik.Maui.Controls.Compatibility.DataGrid;assembly=Telerik.Maui.Controls.Compatibility"
             x:Class="TelerikGridFlickMauiApp.MainPage"
             BackgroundColor="Black">

     <Grid>
        <telerikDataGrid:RadDataGrid ItemsSource="{Binding Stocks}" AutoGenerateColumns="True" WidthRequest="500" HeightRequest="400" />
        <Label Text="{Binding SomeTestProperty}" 
               BackgroundColor="Transparent" 
               InputTransparent="True"
               IsEnabled="False" 
               VerticalOptions="End"
               HorizontalOptions="End" 
               Margin="10"/>
    </Grid>
</ContentPage>
